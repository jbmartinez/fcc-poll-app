div(ng-include='"components/navbar/navbar.html"')
.container
  h2 {{poll.question}}
  p Created by {{poll.owner.name}}
    
  .col-sm-12
    p {{poll.options[1].text}}: {{poll.options[1].count}}
    form.form(name='form', ng-submit='vote(form)', novalidate='')
      .form-group(ng-repeat="option in poll.options")
        label(for='{{$index}}') {{option.text}}
        input(type='radio', name='choice', id='{{$index}}', value='{{option.text}}', ng-model='optionData.text')

      div
        button.btn.btn-inverse.btn-lg.btn-login(type='submit') Vote!
